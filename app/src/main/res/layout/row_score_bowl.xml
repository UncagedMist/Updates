<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:id="@+id/loutHeader"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2.3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@color/colorContra"
                android:maxLines="1"
                android:layout_gravity="center_vertical"
                android:text="Bhuvneshwar Kumar"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtOvers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:layout_weight="3"
            android:padding="1dp"
            android:textColor="@color/black"
            android:text="100"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtMaidens"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:padding="1dp"
            android:textColor="@color/textcolor_title"
            android:gravity="center_horizontal"
            android:text="100"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtRuns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:padding="1dp"
            android:textColor="@color/textcolor_title"
            android:gravity="center_horizontal"
            android:text="100"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtWickets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:padding="1dp"
            android:textColor="@color/textcolor_title"
            android:gravity="center_horizontal"
            android:text="100"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtNoball"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:padding="1dp"
            android:gravity="center_horizontal"
            android:textColor="@color/textcolor_title"
            android:text="100"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtWide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:layout_weight="3"
            android:padding="1dp"
            android:textColor="@color/textcolor_title"
            android:text="100"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtEconomy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:layout_weight="3"
            android:padding="1dp"
            android:textColor="@color/textcolor_title"
            android:text="100"
            android:textSize="12sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>

</LinearLayout>