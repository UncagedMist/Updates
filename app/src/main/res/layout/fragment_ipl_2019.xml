<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/background"

    android:layout_height="match_parent"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
android:id="@+id/aaaaaaaaaaaaaaaa"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/iplMenuRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp" />

        <LinearLayout
            android:id="@+id/loutApps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtLabel1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_2sdp"
                android:text="Most Popular Apps"
                android:textColor="@color/colorPrimary"
                android:textSize="10sp"
                android:layout_marginLeft="@dimen/_1sdp"
                android:layout_gravity="left"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcAppsList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp" />




        </LinearLayout>

    </LinearLayout>
</RelativeLayout>


    <FrameLayout
        android:id="@+id/adViewNative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aaaaaaaaaaaaaaaa"
        android:layout_margin="3dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/adborder"
        android:paddingLeft="6dp"

        android:paddingTop="6dp"
        android:paddingRight="6dp"
        android:paddingBottom="6dp"
        android:visibility="gone" />

</RelativeLayout>
</androidx.core.widget.NestedScrollView>