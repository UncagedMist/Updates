<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/loutTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/theme"
        android:orientation="horizontal"
        android:visibility="gone"
        android:padding="5dp">

        <TextView
            android:id="@+id/txtTitle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight="0.9"
            android:gravity="center_horizontal"
            android:text="Team"
            android:textColor="#fff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTitle2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="P"
            android:textColor="#fff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTitle3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="W"
            android:textColor="#fff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTitle4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="L"
            android:textColor="#fff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTitle5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="T"
            android:textColor="#fff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTitle6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="NR"
            android:textColor="#fff"
            android:textStyle="bold" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight="0.9"
            android:gravity="center_horizontal"
            android:fontFamily="@font/aspergitbold"
            android:textColor="#C62A2A"
            android:background="@color/gray"
            android:text="Rohit Sharma" />
        <TextView
            android:id="@+id/txt2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/aspergitbold"

            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="5" />
        <TextView
            android:id="@+id/txt3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/aspergitbold"

            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="5"/>
       <TextView
            android:id="@+id/txt4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           android:fontFamily="@font/aspergitbold"
           android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="42" />
        <TextView
            android:id="@+id/txt5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/aspergitbold"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="254" />
        <TextView
            android:id="@+id/txt6"
            android:layout_width="match_parent"
            android:fontFamily="@font/aspergitbold"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="100" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"/>




</LinearLayout>